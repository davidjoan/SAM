<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/doctor_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/avatar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />


    <TextView
        android:id="@+id/doctor_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingLeft="5dp"
        android:textStyle="bold"
        android:text="VEGA CHUQUIANO TOMAS ALEJANDRO"
        android:layout_toRightOf="@+id/doctor_image"
        android:layout_alignRight="@+id/doctor_code"
        android:layout_alignEnd="@+id/doctor_code" />

    <TextView
        android:id="@+id/doctor_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doctor_name"
        android:paddingLeft="5dp"
        android:textSize="10sp"
        android:text="CMP: 45676"
        android:layout_toRightOf="@+id/doctor_image" />


</RelativeLayout>