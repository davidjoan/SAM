<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="0dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/institution_image"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:alpha=".60"
                android:src="@drawable/fa_hospital_o"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/institution_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="HOSPITAL REBAGLIATI"
                android:layout_toRightOf="@+id/institution_image" />

            <TextView
                android:id="@+id/institution_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/institution_name"
                android:paddingLeft="5dp"
                android:textSize="10sp"
                android:text="AV. DEFENSORES DEL MORRO 2DO PISO CURVA POLICLINICO NOVAMEDIC"
                android:layout_toRightOf="@+id/institution_image" />


        </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>