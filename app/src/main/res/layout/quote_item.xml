<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="0dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/record_image"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:alpha=".80"
                android:src="@drawable/fa_hospital_o"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/report_quote_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="10sp"
                android:text="@string/doctor_name_value"
                android:layout_toRightOf="@+id/record_image"
                android:layout_below="@+id/report_quote_name"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/report_quote_address"
                android:layout_toRightOf="@+id/record_image"
                android:layout_toEndOf="@+id/record_image"
                android:id="@+id/linearLayout">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/report_quote_day"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:id="@+id/report_quote_week" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:id="@+id/report_quote_month"
                    android:layout_marginRight="22dp"
                    android:layout_marginEnd="22dp" />



            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Institucion"
                android:id="@+id/report_quote_name"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/record_image"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>